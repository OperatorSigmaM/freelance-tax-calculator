<script>
function toggleFlatTax() {
    const flat = document.getElementById('flatTaxRegime').checked;
    document.getElementById('flatTaxBanner').classList.toggle('show', flat);
    if (flat) {
        document.getElementById('inboundWorker').checked = false;
    }
}

document.getElementById('flatTaxRegime').addEventListener('change', toggleFlatTax);

function toggleInboundWorker() {
    const inbound = document.getElementById('inboundWorker').checked;
    if (inbound) {
        document.getElementById('flatTaxRegime').checked = false;
        document.getElementById('flatTaxBanner').classList.remove('show');
    }
}

document.getElementById('inboundWorker').addEventListener('change', toggleInboundWorker);

function calc() {
    const inc = parseFloat(document.getElementById('income').value) || 0;
    const exp = parseFloat(document.getElementById('expenses').value) || 0;
    const isEmp = document.getElementById('isEmployee').checked;
    const flat = document.getElementById('flatTaxRegime').checked;
    const inbound = document.getElementById('inboundWorker').checked;
    
    if (inc <= 0) { alert('Please enter income'); return; }
    
    let net = inc - exp;
    let exempt = 0;
    
    if (inbound && !flat) {
        exempt = net * 0.70;
        net = net * 0.30;
    }
    
    let natTax = 0, regTax = 0, munTax = 0;
    
    if (flat) {
        if (inc > 85000) { alert('Flat tax max ‚Ç¨85,000'); return; }
        const profitability_coefficient_tax = 0.67; 
        const taxBase = inc * profitability_coefficient_tax;
        natTax = taxBase * 0.15;
        regTax = 0;
        munTax = 0;
    } else {
        // UPDATED 2026 IRPEF BRACKETS: 23% / 33% / 43%
        if (net <= 28000) natTax = net * 0.23;
        else if (net <= 50000) natTax = (28000 * 0.23) + ((net - 28000) * 0.33);
        else natTax = (28000 * 0.23) + (22000 * 0.33) + ((net - 50000) * 0.43);
        
        regTax = net * 0.0173;
        munTax = net * 0.008;
    }
    
    let inps = 0;
    const inps_rate_gestione_separata = 0.2623;
    
    if (isEmp) {
        inps = inc * 0.0919;
    } else {
        if (flat) {
            const profitability_coefficient_inps = 0.67; 
            const inps_taxable_base = inc * profitability_coefficient_inps; 
            inps = inps_taxable_base * inps_rate_gestione_separata;
        } else {
            inps = net * inps_rate_gestione_separata;
        }
    }
    
    const tot = natTax + regTax + munTax + inps;
    const netAfter = inc - tot;
    const eff = (tot / inc * 100).toFixed(1);
    
    document.getElementById('r1').textContent = '‚Ç¨' + inc.toLocaleString('en-US');
    
    let displayedTaxableBase;
    if (flat) {
        displayedTaxableBase = inc * 0.67;
    } else {
        displayedTaxableBase = net;
    }
    document.getElementById('r3').textContent = '‚Ç¨' + Math.round(displayedTaxableBase).toLocaleString('en-US');
    
    if (inbound && !flat && exempt > 0) {
        document.getElementById('exemptRow').style.display = 'flex';
        document.getElementById('r2').textContent = '-‚Ç¨' + Math.round(exempt).toLocaleString('en-US');
    } else {
        document.getElementById('exemptRow').style.display = 'none';
    }
    
    if (flat) {
        document.getElementById('taxLabel').textContent = 'Flat Tax (15%)';
        document.getElementById('regRow').style.display = 'none';
        document.getElementById('munRow').style.display = 'none';
    } else {
        document.getElementById('taxLabel').textContent = 'National Tax (IRPEF)';
        document.getElementById('regRow').style.display = 'flex';
        document.getElementById('munRow').style.display = 'flex';
        document.getElementById('r5').textContent = '‚Ç¨' + Math.round(regTax).toLocaleString('en-US');
        document.getElementById('r6').textContent = '‚Ç¨' + Math.round(munTax).toLocaleString('en-US');
    }
    
    document.getElementById('r4').textContent = '‚Ç¨' + Math.round(natTax).toLocaleString('en-US');
    document.getElementById('socialLabel').textContent = isEmp ? 'Employee INPS' : (flat ? 'INPS (Flat Tax)' : 'Self-Employed INPS (26.23%)');
    document.getElementById('r7').textContent = '‚Ç¨' + Math.round(inps).toLocaleString('en-US');
    document.getElementById('r8').textContent = '‚Ç¨' + Math.round(tot).toLocaleString('en-US');
    document.getElementById('r9').textContent = '‚Ç¨' + Math.round(netAfter).toLocaleString('en-US');
    document.getElementById('r10').textContent = eff + '%';
    
    document.getElementById('results').classList.add('show');
}

document.getElementById('income').addEventListener('keypress', e => { if (e.key === 'Enter') calc(); });
document.getElementById('expenses').addEventListener('keypress', e => { if (e.key === 'Enter') calc(); });
</script>