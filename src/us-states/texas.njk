    if (status === 'head') federalStandardDeduction = 23700;
    
    const seDeduction = netIncome * 0.9235 * 0.153 * 0.5;
    const federalTaxableIncome = Math.max(0, netIncome - federalStandardDeduction - seDeduction);
    
