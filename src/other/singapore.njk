function calcTax() {
    const inc = parseFloat(document.getElementById('income').value) || 0;
    const res = document.getElementById('residency').value;
    const rel = parseFloat(document.getElementById('reliefs').value) || 0;
    const cpf = document.getElementById('isCPFEmployee').checked;
    
    if (inc <= 0) {
        alert('Please enter income');
        return;
    }
    
    let tax = 0;
    let chg = inc;
    let cpfAmt = 0;
    let reb = 0;
    
    if (res === 'resident') {
        if (cpf) {
            // CPF Employee contribution is 20%, capped at $88,800 annual
            cpfAmt = Math.min(inc, 88800) * 0.20;
        }
        
        // Chargeable Income = Gross Income - Reliefs
        chg = Math.max(0, inc - rel);
        
        // Progressive Tax Rates (IRAS YA 2025)
        if (chg <= 20000) {
            tax = 0;
        } else if (chg <= 30000) {
            tax = (chg - 20000) * 0.02;
        } else if (chg <= 40000) {
            tax = 200 + (chg - 30000) * 0.035;
        } else if (chg <= 80000) {
            tax = 550 + (chg - 40000) * 0.07;
        } else if (chg <= 120000) {
            tax = 3350 + (chg - 80000) * 0.115;
        } else if (chg <= 160000) {
            tax = 7950 + (chg - 120000) * 0.15;
        } else if (chg <= 200000) {
            tax = 13950 + (chg - 160000) * 0.18;
        } else if (chg <= 240000) {
            tax = 21150 + (chg - 200000) * 0.19;
        } else if (chg <= 280000) {
            tax = 28750 + (chg - 240000) * 0.195;
        } else if (chg <= 320000) {
            tax = 36550 + (chg - 280000) * 0.20;
        } else if (chg <= 500000) {
            tax = 44550 + (chg - 320000) * 0.22;
        } else if (chg <= 1000000) {
            tax = 84150 + (chg - 500000) * 0.23;
        } else {
            tax = 199150 + (chg - 1000000) * 0.24;
        }
        
        // YA 2025 Rebate: 60% of tax, capped at $200
        reb = Math.min(tax * 0.60, 200);
    } else {
        // Non-Resident flat tax rate
        tax = inc * 0.15;
        chg = inc; // No reliefs for non-residents
    }
    
    const taxAfter = Math.max(0, tax - reb);
    const total = cpfAmt + taxAfter;
    const net = inc - total;
    const eff = (total / inc * 100).toFixed(1);
    
    // Helper function for formatting
    const format = (amount) => '$' + Math.round(amount).toLocaleString();
    
    document.getElementById('grossIncome').textContent = format(inc);
    
    if (res === 'resident') {
        document.getElementById('reliefsRow').style.display = 'flex';
        document.getElementById('reliefsAmt').textContent = '-' + format(rel).substring(1); // Show as -$, but remove the leading $ from format()
        document.getElementById('rebateRow').style.display = 'flex';
        document.getElementById('rebateAmt').textContent = '-' + format(reb).substring(1);
        document.getElementById('residentFields').style.display = 'block';
    } else {
        document.getElementById('reliefsRow').style.display = 'none';
        document.getElementById('rebateRow').style.display = 'none';
        document.getElementById('residentFields').style.display = 'none';
    }
    
    document.getElementById('chargeableIncome').textContent = format(chg);
    
    if (cpf && res === 'resident') {
        document.getElementById('cpfSection').style.display = 'block';
        document.getElementById('cpfAmount').textContent = format(cpfAmt);
    } else {
        document.getElementById('cpfSection').style.display = 'none';
    }
    
    document.getElementById('taxBefore').textContent = format(tax);
    document.getElementById('taxAfter').textContent = format(taxAfter);
    document.getElementById('totalDeduct').textContent = format(total);
    document.getElementById('netIncome').textContent = format(net);
    document.getElementById('effectiveRate').textContent = eff + '%';
    
    document.getElementById('results').classList.add('show');
}

document.getElementById('income').addEventListener('keypress', function(e) {
    if (e.key === 'Enter') calcTax();
